{
  "name": "meme",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://st6.io/meme",
  "dependencies": {
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-icons": "3.5.0",
    "react-scripts": "2.1.8",
    "rebass": "3.0.1",
    "save-svg-as-png": "1.4.8",
    "styled-components": "4.1.3",
    "typeface-oswald": "0.0.54",
    "use-media": "1.2.0"
  },
  "devDependencies": {
    "codecov": "3.2.0",
    "cross-env": "5.2.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "enzyme-to-json": "3.3.5",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.6.0",
    "husky": "1.3.1",
    "jest-enzyme": "7.0.2",
    "jest-styled-components": "7.0.0-2",
    "lint-staged": "8.1.3",
    "prettier": "1.16.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "lint": "eslint src",
    "ci": "yarn lint && cross-env CI=true yarn test --coverage && yarn codecov"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env CI=true lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --max-warnings=0",
      "yarn test --bail --findRelatedTests",
      "git add"
    ],
    "src/**/*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error"
    }
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
